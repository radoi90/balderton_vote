- var stylesheet = "session"
- var title = "Log In"

include ../_header

.container
  h1 Log In or 
    a(href='/signup') Create Account
    
  
  form(method='post', action='/login')
    .form-group
      label(for='email') Balderton email
      input#email.form-control(type='email', name='email', placeholder='Balderton email')

    .form-group
      label(for='password') Password
      input#password.form-control(type='password', name='password')

    button.btn.btn-default(type='submit') Log In

include ../_footer