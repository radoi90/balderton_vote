- var title = 'Edit Company'

include ../_header

.container
  h1 Edit Company
  form(method='post', action='/companies/#{company.id}')
    .form-group
      label(for='name') Company Name
      input#name.form-control(type='text', name='name', placeholder='Company name', value="#{company.get('name')}", required)
    .form-group.trix-group
      label(for='description') Description
      input#description(type='hidden', name='description', value='#{company.get('description')}')
      trix-editor(input='description')

    .form-group
      input(type='hidden', name='_method', value='put')
      .btn-group
        input.btn.btn-primary(type='submit', value='Update')
      .btn-group
        a.btn.btn-default(href="/companies/#{company.id}") Cancel

include ../_footer